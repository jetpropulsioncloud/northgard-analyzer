{
  "name": "northgardanalyzer",
  "version": "1.4.4",
  "productName": "northgardanalyzer",
  "main": "main.js",
  "author": "Blockclub Team",
  "license": "ISC",
  "description": "We'll figure it out later lol",

  "scripts": {
    "start": "electron-forge start",
    "dist": "electron-builder -w",
    "build": "electron-builder -w",
    "publish": "electron-builder -w -p always"
  },

  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "firebase": "^12.0.0",
    "yaml": "^2.8.0"
  },

  "build": {
    "copyright": "Â© 2025 Blockclub Team",
    "appId": "com.northgardanalyzer.app",
    "productName": "northgardanalyzer",
    "directories": { "output": "dist" },

    "files": [
      "index.html",
      "viewBuild.html",
      "renderer.js",
      "main.js",
      "preload.js",
      "style.css",
      "assets/**/*",
      "!**/*.txt",
      "package.json"
    ],

    "asar": true,

    "publish": [
      { "provider": "github", "owner": "jetpropulsioncloud", "repo": "northgard-analyzer" }
    ],

    "win": {
      "target": "nsis",
      "icon": "assets/longhouse-icon.ico"
    },

    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "The Longhouse"
    }
  }
}
