{
  "name": "northgardanalyzer",
  "version": "1.3.5",
  "productName": "northgardanalyzer",
  "main": "main.js",
  "author": "Cloudpdf",
  "license": "ISC",
  "description": "We'll figure it out later lol",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-builder",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "firebase": "^12.0.0",
    "yaml": "^2.8.0"
  },
  "build": {
    "appId": "com.northgardanalyzer.app",
    "productName": "northgardanalyzer",
    "files": [
      "**/*",
      "!**/*.txt"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "jetpropulsioncloud",
      "repo": "northgard-analyzer"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/longhouse-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "The Longhouse"
    }
  }
}
